{
  "name": "electron-release-manager",
  "description": "A way to manage electron apps on s3.",
  "keywords": [
    "electron",
    "s3",
    "squirrel",
    "release"
  ],
  "repository": "https://github.com/yhat/electron-release-manager/",
  "env": {
    "AWS_ACCESS_KEY_ID": {
      "description": "Your AWS access key.",
      "value": "ABCD12345678",
      "required": true
    },
    "AWS_SECRET_ACCESS_KEY": {
      "description": "Your AWS secret key.",
      "value": "AQWEIFOGSDFOW82392/ER9",
      "required": true
    },
    "BASE_URL": {
      "description": "URL for your s3 bucket where your apps are distributed.",
      "value": "http://<bucket-name>.s3.amazonaws.com",
      "required": true
    }
  }
}
